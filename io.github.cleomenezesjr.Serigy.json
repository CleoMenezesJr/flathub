{
  "id": "io.github.cleomenezesjr.Serigy",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "serigy",
  "finish-args": [
    "--share=ipc",
    "--device=dri",
    "--socket=wayland",
    "--socket=fallback-x11"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "tag": "v0.16.0"
        }
      ]
    },
    {
      "name": "serigy",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/CleoMenezesJr/Serigy.git",
          "tag": "v1",
          "commit": "3cf93e1de5b50c4790f091dac685622530c26268"
        }
      ]
    }
  ]
}
